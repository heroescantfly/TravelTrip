@using TravelTripProject.Models.Sınıflar
@model List<Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.Baslik</td>
            <td><a href="/Admin/BlogSil/@x.ID" class="btn btn-danger" style="width:80px">Sil</a></td>
            <td><a href="/Admin/BlogGetir/@x.ID" class="btn btn-warning" style="width:80px">Güncelle</a></td>
            <td><a href="/Blog/BlogDetay/@x.ID" class="btn btn-info" style="width:80px">Detaylar</a></td>
        </tr>
    }
</table>
<br />
<a href="/Admin/YeniBlog/" class="btn btn-primary">Yeni Blog</a>
